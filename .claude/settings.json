{
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "32000",
    "MAX_MCP_OUTPUT_TOKENS": "50000"
  },
  "permissions": {
    "allow": [
      "mcp__Ref",
      "mcp__context7",
      "WebSearch",
      "WebFetch",
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(df:*)",
      "Bash(diff:*)",
      "Bash(du:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git mv:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(mkdir:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(npx tsc:*)",
      "Bash(npx tsx:*)",
      "Bash(nx:*)",
      "Bash(ps:*)",
      "Bash(sleep:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(uname:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Skill(claude-skills)",
      "Skill(claude-marketplace)",
      "Skill(git-commit)",
      "Skill(ref-docs)"
    ],
    "deny": [],
    "ask": [
      "Write(.claude/settings.json)",
      "Write(.claude/settings.local.json)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm install --frozen-lockfile 2>/dev/null || pnpm install"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_TOOL_INPUT\" | grep -q 'plugin.json'; then pnpm run sync-marketplace; fi"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "lore-framework@maledorak-marketplace": false
  }
}
