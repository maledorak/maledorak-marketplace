{
  "name": "lore",
  "version": "1.0.0",
  "description": "Manage lore/ directory for tracking tasks, ADRs, wiki, session, and code history in projects",
  "author": {
    "name": "Mariusz (Maledorak) Korzekwa",
    "email": "mariusz@korzekwa.dev"
  },
  "keywords": ["tasks", "adr", "wiki", "session", "lore", "project-management"],
  "mcpServers": {
    "lore": {
      "command": "node",
      "args": ["${CLAUDE_PLUGIN_ROOT}/servers/lore-mcp.js"],
      "env": {
        "CLAUDE_PROJECT_DIR": "${CLAUDE_PROJECT_DIR}"
      }
    }
  }
}
